<% include ../partials/header %>

<div class="container">
  <h1>Edit <%= campground.name %></h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/campgrounds/<%= campground._id %>?_method=put" method="post">
        <div class="form-group">
          <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input type="text" name="number" class="form-control" value="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
